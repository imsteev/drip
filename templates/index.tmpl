{{ define "body" }}
<main>
  <!-- TODO: by default the QR code should be obfuscated. -->
  {{ if ne .Space "" }}
  <img
    src="https://chart.googleapis.com/chart?cht=qr&chl={{ .RoomURL }}&chs=160x160&chld=L|0"
    class="qr-code img-thumbnail img-responsive"
  />
  {{ end }}
  <div>
    <h1>Drip</h1>
    <section class="tool-bar">
      <button type="button" hx-post="/spaces" hx-target="body">
        New space
      </button>
      {{ if ne .Space "" }}
      <hr aria-orientation="vertical" />
      <form hx-get="/spaces" hx-target="body" class="tool-bar">
        <input type="text" name="id" />
        <button>Go to space</button>
      </form>
      {{ end }}
    </section>
    {{ if ne .Space "" }}
    <form class="box" hx-post="/spaces/{{.Space}}/messages" hx-target="body">
      <input
        id="text-input"
        name="text"
        type="text"
        placeholder="What do you want to share?"
      />
      <section class="actions margin">
        <button>+ new</button>
      </section>
      space:
      <span name="spaceID" value="{{ .Space }}">{{.Space}}</span>
    </form>
    {{ end }}
    <br />
  </div>
  <div style="display: flex; gap: 16px" class="flex-wrap:wrap">
    {{ range.Messages }}
    <form
      hx-delete="{{ $.DeleteURL }}?text={{ . }}"
      hx-swap="outerHTML"
      style="border-radius: 16px"
    >
      <div class="drip">
        {{ println . }}
        <button>x</button>
      </div>
    </form>
    {{ end }}
  </div>
</main>
{{ end }}

{{ define "body" }}
<main>
  <div>
    <h1>Drip</h1>
    <div>
      <input
        id="text-input"
        name="text"
        type="text"
        placeholder="What do you want to share?"
        hx-post="/drip"
        hx-target="body"
      />
      <div style="margin: 8px 8px 0 0; text-align: right">enter to drip</div>
    </div>
    <p>or</p>
    <div style="display: flex; align-items: center">
      <input id="upload-file" type="file" />
    </div>
  </div>
  {{if . }}
  <div>
    <h2>Your drip</h2>
    <ul>
      {{ range . }}
      <li>
        {{ println .}}
      </li>
      {{
        end
      }}
    </ul>
  </div>
  {{ end }}
</main>
{{ end }}

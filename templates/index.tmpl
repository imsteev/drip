{{ define "body" }}
<main>
  <div>
    <a href="/">Home</a>
    <section class="tool-bar">
      <button type="button" hx-post="/spaces" hx-target="body">
        New space
      </button>
      {{ if ne .SpaceID 0 }}
      <button type="button" hx-post="/spaces/{{.SpaceID}}/share">Share</button>
      {{ end }}
    </section>
    {{ if and (ne .SpaceID 0) (lt (len .Messages) 5) }}
    <form class="box" hx-post="/spaces/{{.SpaceID}}/messages" hx-target="body">
      <input id="text-input" name="text" placeholder="Post a note" />
      <section class="actions" style="margin-top: 16px">
        <button>+ new</button>
      </section>
    </form>
    {{ end }}
  </div>

  <div style="display: flex; gap: 16px" class="flex-wrap:wrap">
    {{ range.Messages }}
    <form
      hx-delete="/messages/{{.ID}}"
      hx-swap="outerHTML"
      style="border-radius: 16px"
    >
      <div class="drip">
        {{ .Text }}
        <button>x</button>
      </div>
    </form>
    {{ end }}
  </div>
</main>
{{ end }}
